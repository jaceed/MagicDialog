<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MagicText" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/ts_04</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

     <!--============ Buttons ==============-->
    <style name="MagicButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/ts_04</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="MagicButton.DialogNegative">
        <item name="android:background">@drawable/bg_button_corner_gray_variant</item>
        <item name="android:textColor">@color/button_text_gray_variant</item>
    </style>

    <style name="MagicButton.DialogPositive">
        <item name="android:background">@drawable/bg_button_corner_gray</item>
        <item name="android:textColor">@color/primary_white</item>
    </style>

    <style name="DialogThemeCommon" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="android:textViewStyle">@style/MagicText</item>
        <item name="magicMinWidth">@dimen/dialog_common_content_min_width</item>
        <item name="magicOptionStyle">@style/DialogOptions</item>
        <item name="magicPromptStyle">@style/DialogPrompt</item>
    </style>

    <style name="DialogPrompt">
        <item name="magicBackgroundMargin">@dimen/dialog_common_bg_inset_margin</item>
        <item name="magicBackgroundMarginBottom">@dimen/dialog_common_bg_inset_margin_bottom</item>
    </style>

    <style name="DialogOptions">
        <item name="magicTitleColor">@color/gray_04</item>
        <item name="magicOptionItemColor">@color/gray_01</item>
        <item name="magicOptionItemCycledColor">@color/gray_05</item>
    </style>

    <!--============ Animations ==============-->
    <style name="OptionDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in_dialog</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out_dialog</item>
    </style>

    <style name="PromptDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_in_dialog_offset</item>
        <item name="android:windowExitAnimation">@anim/anim_bottom_out_dialog_offset</item>
    </style>

</resources>