<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MagicDialog" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

<!--        <item name="colorSurface">#aaa</item>-->
<!--        <item name="colorOnSurface">#0f0</item>-->
<!--        <item name="magicBackground">#aaa</item>-->
<!--        <item name="magicTitleColor">#f00</item>-->
<!--        <item name="magicPromptStyle">@style/Prompt</item>-->
<!--        <item name="magicOptionStyle">@style/Options</item>-->
<!--        <item name="magicOptionItemColor">@color/auxiliary_flower</item>-->
<!--        <item name="magicOptionItemCheckColor">@color/primary_blue_variant_400</item>-->

    </style>

    <style name="Negative" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@android:color/holo_blue_bright</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Positive">
        <item name="android:background">@drawable/bg_custom_positive</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Options">
        <item name="magicTitleColor">#F00</item>
        <item name="magicTitleSize">32dp</item>
        <item name="magicOptionItemColor">#ff6</item>
        <item name="magicOptionItemCycledColor">#f0f</item>
        <item name="magicBackground">@android:color/holo_blue_dark</item>
        <item name="magicOptionItemCheckColor">#ff0</item>
        <item name="magicBackgroundMargin">10dp</item>
        <item name="magicBackgroundMarginBottom">60dp</item>
    </style>

    <style name="Prompt">
        <item name="magicTitleColor">#FF0</item>
        <item name="magicTitleSize">10dp</item>
        <item name="magicMessageColor">#0FF</item>
        <item name="magicMessageSize">40dp</item>
        <item name="magicBackgroundMargin">50dp</item>
        <item name="magicBackgroundMarginBottom">10dp</item>
    </style>

    <style name="Theme.MagicDialog.Custom">
        <item name="magicBackground">#348956</item>
        <item name="magicNegativeStyle">@style/Negative</item>
        <item name="magicPositiveStyle">@style/Positive</item>
        <item name="magicPromptStyle">@style/Prompt</item>
        <item name="magicOptionStyle">@style/Options</item>
    </style>

</resources>